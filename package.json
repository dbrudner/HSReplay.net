{
	"name": "hsreplaynet",
	"private": true,
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack --bail",
		"dev": "webpack-dev-server",
		"lint": "yarn lint:prettier; yarn lint:tslint",
		"lint:prettier": "prettier -l \"hsreplaynet/static/{scripts,styles}/**/*.{ts,tsx,js,scss}\"",
		"lint:tslint": "tslint \"hsreplaynet/static/scripts/src/**/*\" --project tsconfig.json",
		"format": "yarn format:tslint; yarn format:prettier",
		"format:prettier": "prettier --write \"hsreplaynet/static/{scripts,styles}/**/*.{ts,tsx,js,scss}\"",
		"format:tslint": "tslint \"hsreplaynet/static/scripts/src/**/*\" --project tsconfig.json --fix",
		"i18n:build": "tsc --outDir \"build/generated/locale-extract\" --target es2017 --sourceMap false --jsx preserve",
		"i18n:extract": "i18next-scanner --config locale/i18next-scanner.config.js --output locale/hsreplaynet/frontend/ \"build/generated/locale-extract/**/*.js{,x}\""
	},
	"dependencies": {
		"@types/bootstrap": "^3.3",
		"@types/d3": "^4.12.0",
		"@types/facebook-pixel": "^0.0.19",
		"@types/google.analytics": "^0.0.37",
		"@types/i18next": "^8.4.4",
		"@types/jquery": "^3.2.16",
		"@types/lodash": "^4.14.88",
		"@types/memoize-one": "^3.1.1",
		"@types/react": "^16.4.6",
		"@types/react-dom": "^16.0.5",
		"@types/react-i18next": "^7.8.0",
		"@types/react-virtualized": "^9.7.10",
		"@types/stripe": "^5.0.5",
		"@types/stripe-checkout": "^1.0.1",
		"@types/victory": "^0.9.18",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-react": "^6.24.1",
		"blob": "0.0.4",
		"clipboard-polyfill": "^2.4.6",
		"cookie_js": "^1.2.2",
		"cross-env": "^5.1.1",
		"css-loader": "^0.28.7",
		"d3": "^4.12.0",
		"date-fns": "^1.29.0",
		"deckstrings": "^2.0.0",
		"extract-text-webpack-plugin": "^3.0.2",
		"hearthstonejson-client": "^0.8.4",
		"i18next": "^11.3.5",
		"i18next-callback-backend": "^1.0.0-alpha.1",
		"i18next-icu": "^0.4.0",
		"intl": "^1.2.5",
		"lodash": "^4.17.4",
		"memoize-one": "^4.0.0",
		"node-sass": "^4.7.2",
		"numbro": "^2.0.6",
		"prop-types": "^15.6.0",
		"raven-js": "^3.20.1",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"react-i18next": "^7.8.0",
		"react-stripe-elements": "^1.4.0",
		"react-virtualized": "^9.9.0",
		"sass-loader": "^6.0.6",
		"tether-shepherd": "^1.8.1",
		"ts-loader": "^3.2.0",
		"typescript": "^2.6.2",
		"uglifyjs-webpack-plugin": "^1.1.2",
		"victory": "^0.25.6",
		"webpack": "^3.10.0",
		"webpack-bundle-tracker": "^0.2.1",
		"whatwg-fetch": "^2.0.4"
	},
	"devDependencies": {
		"@types/jest": "^23.1.1",
		"hard-source-webpack-plugin": "^0.6.4",
		"i18next-scanner": "^2.6.3",
		"jest": "^23.1.0",
		"prettier": "^1.12.1",
		"react-test-renderer": "^16.4.1",
		"ts-jest": "^22.4.6",
		"tslint": "^5.10.0",
		"tslint-config-prettier": "^1.12.0",
		"tslint-react": "^3.5.1",
		"typemoq": "^2.1.0",
		"webpack-dev-server": "^2"
	},
	"prettier": {
		"useTabs": true,
		"trailingComma": "all"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"skipBabel": true,
				"useExperimentalLanguageServer": true
			}
		},
		"testMatch": [
			"**/__tests__/*.+(ts|tsx|js)"
		]
	}
}
